<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900" style="-fx-background-color: #e0e8f0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DashboardController">
    
    <!-- Title -->
    <Label layoutX="30" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome to Budget Tracker !" />
    <Label layoutX="30" layoutY="55" style="-fx-font-size: 14px;" text="Organize your work and improve your performance with us here !" />

    <!-- Subtitle -->
    <Label layoutX="30" layoutY="100" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Try things out" />

    <!-- Card Container -->
    <HBox layoutX="30" layoutY="140" spacing="20">
        <!-- Card 1 -->
        <VBox prefWidth="250" spacing="10" style="-fx-background-color: #008080; -fx-padding: 20; -fx-background-radius: 10;">
            <Label prefHeight="7.0" prefWidth="222.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Add Budget &amp; View History">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Label>
            <Label text="Set up with relevant information" wrapText="true" />
            <Button fx:id="ButtonOpen" onAction="#ButtonOpen_Action" style="-fx-background-color: #000; -fx-text-fill: white;" text="Open" />
        </VBox>

        <!-- Card 2 -->
        <VBox prefHeight="146.0" prefWidth="239.0" spacing="10" style="-fx-background-color: #C0C0C0; -fx-padding: 20; -fx-background-radius: 10;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Add Expand" />
            <Label text="Update items for today" wrapText="true" />
            <Button fx:id="ButtonCreate" onAction="#ButtonCreate_Action" style="-fx-background-color: #000; -fx-text-fill: white;" text="Create" />
        </VBox>
    </HBox>
</AnchorPane>
